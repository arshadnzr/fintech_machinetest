        <TextView
            android:id="@+id/postcardbody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:maxWidth="320sp"
            android:layout_marginTop="24dp"
            android:text="Bodys fsadfaskdjfhosadnf asd fas df asd fa sd fas df as df as df asd f asd fa sd fas df as df as df asd fa sdf as df asd f s"
            app:layout_constraintStart_toStartOf="@+id/postcardtitle"
            app:layout_constraintTop_toBottomOf="@id/postcardtitle" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>